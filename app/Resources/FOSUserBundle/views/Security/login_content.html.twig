{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<h4 class="text-center">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h4><hr>
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" class="form-control" required="required" />
    </div>
    
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    
    
    <input type="submit" class="btn btn-sm btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
<br>
<p>if u don't have an account u can Register <a href="{{path('fos_user_registration_register')}}" title="register">Here</a></p>
<p>forgot ur password u can Request new password <a href="{{path('fos_user_resetting_request')}}" title="reset">Now</a> </p>

