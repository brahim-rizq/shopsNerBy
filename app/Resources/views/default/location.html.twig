{% extends 'shops.html.twig' %}


    {% block breadCrumb %}
        <header class="hero-area">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="header-title">Location </h2>
                    </div>
                </div>
            </div>
        </header>
    {% endblock %}
{% block content %}
    
<section>
    <div class="container">
        <div class="col-md-12">
            <h4 class="text-center">Current Location</h4><hr>

            {{ form_start(form) }}
                <div class="col-md-4">
                    <h5 class="text-info">Adresse info</h5><hr>
                    <div class="form-group">
                     <label for="city">City</label>
                        {{ form_widget(form.city, {'attr': {'id':'city'}})  }}     
                    </div>
                    <div class="form-group">
                     <label for="zipCode">Zip Code</label>
                        {{ form_widget(form.zipCode, {'attr': {'id':'zipCode'}})  }}     
                    </div>
                    <div class="form-group">
                     <label for="lat">Latitude</label>
                        {{ form_widget(form.lat, {'attr': {'id':'lat'}})  }}     
                    </div>
                    <div class="form-group">
                     <label for="lang">Longitude</label>
                        {{ form_widget(form.lang, {'attr': {'id':'lang'}})  }}     
                    </div>
                    
                </div>
                <div class="col-md-8">
                    <h5 class="text-info">Google Map</h5><hr>
                    <p>Point the red marker on the map to ur Current location </p>
                    <div id="map_canvas" style="width: 100%; height: 350px;margin-bottom: 20px;"></div>
                    <div class="form-group">
                     <label for="adresse">Address</label>
                        {{ form_widget(form.adresse, {'attr': {'id':'adresse','class':'sizeNone'}})  }}     
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="">
                        <input class="btn btn-sm btn-primary" type="submit" value="Create" />
                        <a class="btn btn-sm btn-default pull-right" href="{{ path('shops_index') }}" title=" profile">Cancel</a>
                    </div>
                </div>
                
                
            {{ form_end(form) }}
        </div>        
    </div>
</section>



{% endblock %}

{% block stylesheets %}
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;key=AIzaSyBWPtgDmUruJF55Lg5uwyiwjjK6fFXwkD8"></script>
{% endblock %}

{% block javascripts %}



<script type="text/javascript">//<![CDATA[
        window.onload=function(){
          var map;
          var userLat = "{{app.user.Userinfo.lat}}";
          var userLang = "{{app.user.Userinfo.lang}}";
          if ( userLat === null || userLat == '') {
            userLat = 33.58338239718658;
            userLang = -7.5983096008301345;
          }
          function initialize() {
              var myLatlng = new google.maps.LatLng(userLat, userLang);

              var myOptions = {
                  zoom: 8,
                  center: myLatlng,
                  mapTypeId: google.maps.MapTypeId.ROADMAP
              };
              map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

              var marker = new google.maps.Marker({
                  draggable: true,
                  position: myLatlng,
                  map: map,
                  title: "Shop Location"
              });

              google.maps.event.addListener(marker, 'dragend', function (event) {
                
                  document.getElementById("appbundle_location_lat").value = event.latLng.lat();
                  document.getElementById("appbundle_location_lang").value = event.latLng.lng();
                  infoWindow.open(map, marker);
              });
          }
          google.maps.event.addDomListener(window, "load", initialize());
        }//]]> 
    </script>
{% endblock %}