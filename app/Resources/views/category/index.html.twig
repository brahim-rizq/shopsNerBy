{% extends 'shops.html.twig' %}
    {% block breadCrumb %}
        <header class="hero-area">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="header-title">List Categories</h2>
                        <a class=" pull-right" href="{{ path('category_new') }}">Create a new category</a>
                    </div>
                </div>
            </div>
        </header>
    {% endblock %}

{% block content %}

<section>
    <div class="container">
        <div class="text-center"><a href="{{ path('category_new') }}" class="btn btn-sm btn-primary">Add New One</a> </div><br><br>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>Category Name</th>
                        <th>Created at</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td><a href="#">00{{ category.id  }}</a></td>
                        <td>{{ category.name }}</td>
                        <td>{% if category.createdAt %}{{ category.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                        <a class="label label-primary" href="{{ path('category_edit', { 'id': category.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i> edit</a>   
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="Page navigation">
                {{ knp_pagination_render(categories) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
